<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_15dp"
    android:paddingLeft="@dimen/margin_10dp"
    android:paddingRight="@dimen/margin_10dp"
    android:paddingTop="@dimen/margin_15dp">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="@dimen/margin_40dp"
        android:layout_height="@dimen/margin_40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/margin_10dp"
        android:src="@drawable/ic_virus_2" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/text_status"
        android:layout_toRightOf="@+id/img_logo"
        android:ellipsize="end"
        android:lines="1"
        android:paddingRight="@dimen/margin_5dp"
        android:textColor="@color/font_deep_gray"
        android:textSize="@dimen/text_size_17"
        tools:text="Action memo Action memo Action memo Action memo Action memo Action memo " />

    <TextView
        android:id="@+id/text_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_name"
        android:layout_toRightOf="@+id/img_logo"
        android:textColor="@color/font_light_gray"
        tools:text="System application" />

    <TextView
        android:id="@+id/text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/bg_green_normal"
        android:textSize="@dimen/text_size_16"
        tools:text="Safe" />
</RelativeLayout>
