<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="122dp"
                android:background="@color/white"
                android:orientation="vertical">

    <TextView
        android:id="@+id/lock_list_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/lock_recommend_tip1"
        android:textColor="@color/bg_deep_blue"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/lock_list_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lock_list_tip"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="@string/lock_recommend_tip2"
        android:textColor="@color/font_deep_gray"
        android:textSize="15sp"/>

    <View
        android:id="@+id/line_dotted"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_12dp"
        android:layout_below="@+id/lock_list_desc"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/line_dotted"
        android:layerType="software"/>

</RelativeLayout>