<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/gesturepwd_root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="2"/>

        <ImageView
            android:id="@+id/iv_app"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:lines="1"
            android:text="@string/num_create_text_01"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/layout_cycle"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/num_point_1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/num_point"/>

            <ImageView
                android:id="@+id/num_point_2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/num_point"/>

            <ImageView
                android:id="@+id/num_point_3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/num_point"/>

            <ImageView
                android:id="@+id/num_point_4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/num_point"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <TableLayout
            android:id="@+id/layout_number"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/number_1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bg_num_cycle"
                    android:gravity="center"
                    android:text="@string/number_1"
                    android:textColor="@color/white"
                    android:textSize="28sp"/>

                <Button
                    android:id="@+id/number_2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bg_num_cycle"
                    android:gravity="center"
                    android:text="@string/number_2"
                    android:textColor="@color/white"
                    android:textSize="28sp"/>

                <Button
                    android:id="@+id/number_3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bg_num_cycle"
                    android:gravity="center"
                    android:text="@string/number_3"
                    android:textColor="@color/white"
                    android:textSize="28sp"/>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/number_4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bg_num_cycle"
                    android:gravity="center"
                    android:text="@string/number_4"
                    android:textColor="@color/white"
                    android:textSize="28sp"/>

                <Button
                    android:id="@+id/number_5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bg_num_cycle"
                    android:gravity="center"
                    android:text="@string/number_5"
                    android:textColor="@color/white"
                    android:textSize="28sp"/>

                <Button
                    android:id="@+id/number_6"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bg_num_cycle"
                    android:gravity="center"
                    android:text="@string/number_6"
                    android:textColor="@color/white"
                    android:textSize="28sp"/>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/number_7"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bg_num_cycle"
                    android:gravity="center"
                    android:text="@string/number_7"
                    android:textColor="@color/white"
                    android:textSize="28sp"/>

                <Button
                    android:id="@+id/number_8"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bg_num_cycle"
                    android:gravity="center"
                    android:text="@string/number_8"
                    android:textColor="@color/white"
                    android:textSize="28sp"/>

                <Button
                    android:id="@+id/number_9"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bg_num_cycle"
                    android:gravity="center"
                    android:text="@string/number_9"
                    android:textColor="@color/white"
                    android:textSize="28sp"/>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/number_none"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bg_num_cycle"
                    android:gravity="center"
                    android:text="@string/number_0"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:visibility="invisible"/>

                <Button
                    android:id="@+id/number_0"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bg_num_cycle"
                    android:gravity="center"
                    android:text="@string/number_0"
                    android:textColor="@color/white"
                    android:textSize="28sp"/>

                <ImageView
                    android:id="@+id/number_del"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bg_num_cycle"
                    android:contentDescription="@string/app_name"
                    android:gravity="center"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/number_del"/>
            </TableRow>

        </TableLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dip"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/unlock_forget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.0dip"
            android:clickable="true"
            android:gravity="center"
            android:text="忘记密码"
            android:textColor="@android:color/white"
            android:textSize="14.0sp"
            android:visibility="gone"/>
    </LinearLayout>


</RelativeLayout>
