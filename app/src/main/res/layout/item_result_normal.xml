<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_result_normal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_result_category_gray"
    android:paddingTop="@dimen/margin_15dp">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="@dimen/margin_50dp"
        android:layout_height="@dimen/margin_50dp"
        android:layout_marginBottom="@dimen/margin_15dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:src="@drawable/ic_broswer" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_icon"
        android:paddingBottom="@dimen/margin_15dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_toLeftOf="@+id/text_count"
        android:layout_toRightOf="@+id/img_icon"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_1"
            android:textSize="@dimen/text_size_18"
            tools:text="Malware scan" />

        <TextView
            android:id="@+id/text_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_title"
            android:layout_marginTop="@dimen/margin_5dp"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/text_size_14"
            android:visibility="visible"
            tools:text="285 safe apps,verified by 445314242 efinitions" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/margin_20dp"
        android:textColor="@color/black_1"
        android:textSize="@dimen/text_size_18"
        tools:text="1" />

    <ImageView
        android:id="@+id/img_triangle"
        android:layout_width="@dimen/margin_10dp"
        android:layout_height="@dimen/margin_15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_5dp"
        android:paddingBottom="@dimen/margin_5dp"
        android:src="@drawable/ic_triangle"
        android:visibility="visible" />
</RelativeLayout>

