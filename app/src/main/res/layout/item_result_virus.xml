<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_white_clicked_corner"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="@dimen/margin_50dp"
        android:layout_height="@dimen/margin_50dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp" />

    <TextView
        android:id="@+id/text_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_logo"
        android:text="Malware"
        android:layout_marginTop="@dimen/margin_15dp"
        android:textColor="@color/red"
        android:textSize="@dimen/text_size_18" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_category"
        android:layout_toRightOf="@+id/img_logo"
        android:text="faklfja"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/text_ignore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingBottom="@dimen/margin_5dp"
        android:paddingLeft="@dimen/margin_15dp"
        android:paddingRight="@dimen/margin_15dp"
        android:paddingTop="@dimen/margin_10dp"
        android:text="Ignore"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:id="@+id/text_install_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_logo"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:text="- Install Data:2016-12-21" />

    <TextView
        android:id="@+id/text_virus_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_install_date"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_3dp"
        android:text="- Containing Virus:Android.Privacy.Secapk" />

    <TextView
        android:id="@+id/text_advice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_virus_name"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:text="Advice:Uninstall Immediately"
        android:textColor="@color/black_1"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/text_uninstall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_advice"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/bg_result_category_gray"
        android:gravity="center"
        android:padding="@dimen/margin_10dp"
        android:text="@string/uninstall"
        android:textColor="@color/primary"
        android:textSize="@dimen/text_size_18"
        android:textStyle="bold" />
</RelativeLayout>