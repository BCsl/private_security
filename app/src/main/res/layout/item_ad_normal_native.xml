<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_normal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_10dp"
    android:paddingLeft="@dimen/margin_16dp"
    android:paddingRight="@dimen/margin_16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_corner"
        android:orientation="vertical"
        android:padding="@dimen/margin_10dp">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/img_icon"
            android:layout_width="@dimen/margin_50dp"
            android:background="@drawable/ic_default_90"
            android:layout_height="@dimen/margin_50dp"
            android:layout_marginRight="@dimen/margin_10dp" />


        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_icon"
            android:ellipsize="end"
            android:lines="1"
            android:paddingTop="@dimen/dp_2"
            android:textColor="@color/black_1"
            android:textSize="@dimen/text_size_16"
            tools:text="Power Usage Ranking" />

        <TextView
            android:id="@+id/text_mark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_icon"
            android:layout_toRightOf="@+id/img_icon"
            android:ellipsize="end"
            android:paddingBottom="@dimen/dp_2"
            android:singleLine="true"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/text_size_13"
            tools:text="Too many junk file ahfjk;ajkl;fj;ajffasdfjakldfj;af" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_icon"
            android:layout_marginTop="@dimen/margin_10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_defalut_1200"
            android:minHeight="160dp"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/img_bg"
            android:layout_alignTop="@+id/img_bg"
            android:paddingTop="@dimen/margin_10dp"
            android:src="@drawable/ic_ad"
            android:textColor="@color/white" />

        <com.tools.security.widget.shimmer.ShimmerTextView
            android:id="@+id/text_install"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40dp"
            android:layout_below="@+id/img_bg"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/bg_btn_blue"
            android:gravity="center"
            android:text="INSTALL"
            android:padding="@dimen/margin_10dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_button" />
    </RelativeLayout>
</LinearLayout>