<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="@dimen/margin_50dp"
        android:layout_height="@dimen/margin_50dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_15dp" />

    <TextView
        android:id="@+id/text_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15dp"
        android:layout_toRightOf="@+id/img_logo"
        android:textColor="@color/red"
        android:textSize="@dimen/text_size_18"
        tools:text="Malware" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_category"
        android:layout_toRightOf="@+id/img_logo"
        android:ellipsize="middle"
        android:paddingRight="@dimen/margin_15dp"
        android:singleLine="true"
        android:textColor="@color/font_deep_gray"
        android:textSize="@dimen/text_size_15"
        tools:text="faklfja" />

    <TextView
        android:id="@+id/text_malicious_behavior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_logo"
        android:paddingLeft="@dimen/margin_15dp"
        android:layout_marginTop="5dp"
        android:text="@string/malicious_behavior"
        android:textColor="@color/font_deep_gray" />

    <TextView
        android:id="@+id/text_malicious_behavior_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_malicious_behavior"
        android:layout_marginTop="@dimen/margin_3dp"
        android:paddingLeft="@dimen/margin_15dp"
        android:paddingRight="@dimen/margin_15dp"
        android:text="@string/malicious_behavior_details"
        android:textColor="@color/font_deep_gray" />

    <TextView
        android:id="@+id/text_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_malicious_behavior_desc"
        android:layout_marginTop="@dimen/margin_10dp"
        android:paddingLeft="@dimen/margin_15dp"
        android:paddingRight="@dimen/margin_15dp"
        android:text="Classification:fha;dfjkad;fja;d"
        android:textColor="@color/font_light_gray"
        android:textSize="@dimen/text_size_14" />

    <View
        android:id="@+id/line"
        style="@style/AppTheme.Line_H"
        android:layout_below="@+id/text_class"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_10dp" />

    <TextView
        android:id="@+id/text_del"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:background="@drawable/bg_white_clicked"
        android:gravity="center"
        android:padding="@dimen/margin_10dp"
        android:text="@string/delete"
        android:textAllCaps="true"
        android:textColor="@color/green"
        android:textSize="@dimen/text_size_18"
        android:textStyle="bold" />
</RelativeLayout>