<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/dialog_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_corner">

    <ImageView
        android:id="@+id/ic_failed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_network_error"
        android:visibility="gone"/>


    <com.tools.security.widget.RoundedImageView
        android:id="@+id/img_ad_content"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:riv_corner_radius_top_left="5dp"
        app:riv_corner_radius_top_right="5dp"/>

    <com.tools.security.widget.SelectableRoundedImageView
        android:id="@+id/icon_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_dialog_ad"
        app:sriv_left_bottom_corner_radius="0dp"
        app:sriv_left_top_corner_radius="0dp"
        app:sriv_oval="false"
        app:sriv_right_bottom_corner_radius="0dp"
        app:sriv_right_top_corner_radius="5dp"/>

    <com.tools.security.widget.RoundedImageView
        android:id="@+id/img_icon"
        android:layout_width="@dimen/margin_45dp"
        android:layout_height="@dimen/margin_45dp"
        android:layout_below="@+id/img_ad_content"
        android:layout_marginLeft="@dimen/margin_12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="@dimen/margin_12dp"
        android:background="@drawable/bg_white_corner"
        android:src="@drawable/ic_apk"
        app:riv_corner_radius_bottom_left="5dp"
        app:riv_corner_radius_bottom_right="5dp"
        app:riv_corner_radius_top_left="5dp"
        app:riv_corner_radius_top_right="5dp"/>

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_ad_content"
        android:layout_toRightOf="@+id/img_icon"
        android:ellipsize="end"
        android:lines="1"
        android:paddingRight="@dimen/margin_12dp"
        android:paddingTop="@dimen/margin_12dp"
        android:text="dasdasdsadsad"
        android:textColor="@color/font_deep_gray"
        android:textSize="@dimen/text_size_17"
        android:textStyle="bold"/>


    <LinearLayout
        android:id="@+id/text_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_name"
        android:layout_toRightOf="@+id/img_icon"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_star"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_star"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_star"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_star"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_star"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_mark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_icon"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingBottom="@dimen/margin_12dp"
        android:paddingLeft="@dimen/margin_12dp"
        android:paddingRight="@dimen/margin_12dp"
        android:paddingTop="@dimen/margin_8dp"
        android:textColor="@color/font_light_gray"
        android:textSize="@dimen/text_size_14"/>

    <com.tools.security.widget.shimmer.ShimmerTextView
        android:id="@+id/text_learn_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_mark"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/bg_green_click"
        android:gravity="center"
        android:padding="@dimen/margin_10dp"
        android:text="Learn More"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_18"
        app:reflectionColor="@color/white"/>
</RelativeLayout>