<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/white"
                android:orientation="vertical">
    <LinearLayout
        android:id="@+id/rating_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_level_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/safe_level_enable_true"/>

        <ImageView
            android:id="@+id/img_level_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/safe_level_enable_false"/>

        <ImageView
            android:id="@+id/img_level_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/safe_level_enable_false"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_safe_level_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rating_layout"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Low"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tv_safe_level_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="@string/security_level_header_tip"
        android:textColor="@color/font_light_gray"
        android:textSize="13sp"/>

</RelativeLayout>