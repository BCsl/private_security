<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_white_corner"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingBottom="@dimen/margin_3dp"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp"
        android:paddingTop="@dimen/margin_15dp"
        android:text="Virus Lib Downloading..."
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_18" />

    <ProgressBar
        android:id="@+id/progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_8dp"
        android:layout_below="@+id/text_title"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:progressDrawable="@drawable/progressbar_primarycolor" />

    <TextView
        android:id="@+id/text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/progress"
        android:layout_marginTop="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp"
        tools:text="1.20MB / 2.50MB"
        android:textSize="@dimen/text_size_15" />

    <View
        android:id="@+id/line"
        style="@style/AppTheme.Line_H"
        android:layout_below="@+id/text_size"
        android:layout_marginTop="@dimen/margin_15dp" />

    <TextView
        android:id="@+id/text_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:background="@drawable/bg_white_bottom_corner"
        android:gravity="center"
        android:padding="@dimen/margin_10dp"
        android:text="CANCEL"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_17" />
</RelativeLayout>