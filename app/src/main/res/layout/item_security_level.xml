<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_normal"
                android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_white_corner">

        <ImageView
            android:id="@+id/security_level_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/line"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/security_level_enable"
            android:layout_toRightOf="@+id/security_level_img"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/security_level_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font_deep_gray"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/security_level_desc"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/font_light_gray"
                android:textSize="13sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/security_level_enable"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10dp"
            android:background="@drawable/bg_frame_btn_blue"
            android:gravity="center"
            android:text="Enable"
            android:textColor="@color/primary"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/ic_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:src="@drawable/safe_level_enable"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>