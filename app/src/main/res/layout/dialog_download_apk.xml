<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_dl_apk"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_corner"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_orange_top_corner"
        android:padding="@dimen/margin_10dp">

        <ImageView
            android:id="@+id/img_ultra"
            android:layout_width="120dp"
            android:layout_height="@dimen/margin_20dp"
            android:src="@drawable/ic_dialog_logo" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_close" />

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="@dimen/margin_50dp"
            android:layout_height="@dimen/margin_50dp"
            android:layout_below="@+id/img_ultra"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/margin_20dp"
            android:src="@drawable/ic_apk" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_bottom_corner">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"

            android:paddingLeft="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_10dp"
            android:paddingTop="@dimen/margin_15dp"
            android:text="Puzzles with Matches"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_name"
            android:layout_marginTop="@dimen/margin_3dp"
            android:ellipsize="end"
            android:lines="1"
            android:paddingBottom="@dimen/margin_15dp"
            android:paddingLeft="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_10dp"
            android:text="大小：3MB" />

        <View
            android:id="@+id/line"
            style="@style/AppTheme.Line_H"
            android:layout_below="@+id/text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_del"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/margin_5dp"
                android:drawableTop="@drawable/ic_del"
                android:gravity="center"
                android:padding="@dimen/margin_10dp"
                android:text="删除"
                android:textSize="@dimen/text_size_15" />

            <View
                style="@style/AppTheme.Line_V"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_5dp" />

            <TextView
                android:id="@+id/text_install"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/margin_5dp"
                android:drawableTop="@drawable/ic_del"
                android:gravity="center"
                android:text="安装"
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>