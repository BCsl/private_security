<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_splash"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/ic_cloud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/splash_cloud"/>

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/ic_logo_splash"/>

    <ImageView
        android:id="@+id/app_name"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_below="@+id/app_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_30dp"
        android:adjustViewBounds="true"
        android:src="@drawable/splash_app_name"/>

    <TextView
        android:id="@+id/app_slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_name"
        android:layout_marginTop="@dimen/margin_10dp"
        android:gravity="center_horizontal"
        android:text="@string/splash_tip"
        android:textColor="@color/white_70"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_tip"
        android:gravity="center_horizontal"
        android:text="@string/splash_tip_two"
        android:textColor="@color/white_70"
        android:textSize="@dimen/text_size_12"/>

    <TextView
        android:id="@+id/bottom_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:gravity="center_horizontal"
        android:text="@string/splash_tip_three"
        android:textColor="@color/white_70"
        android:textSize="@dimen/text_size_12"/>
</RelativeLayout>