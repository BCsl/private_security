<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin_15dp"
            android:src="@drawable/triangle_arrow"/>

        <TextView
            android:id="@+id/menu_not_lock"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_white_top_corner"
            android:drawableLeft="@drawable/menu_pattern_lock"
            android:drawablePadding="@dimen/margin_10dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingTop="5dp"
            android:text="@string/lock_menu_text_1"/>

        <TextView
            android:id="@+id/menu_forgot_pwd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_white_clicked"
            android:drawableLeft="@drawable/menu_pattern_forgot"
            android:drawablePadding="@dimen/margin_10dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="Forget password?"/>

        <TextView
            android:id="@+id/menu_setting"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_white_clicked"
            android:drawableLeft="@drawable/menu_pattern_setting"
            android:drawablePadding="@dimen/margin_10dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="@string/lock_setting"/>

        <TextView
            android:id="@+id/checkbox_pattern"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_white_bottom_corner"
            android:drawableLeft="@drawable/menu_pattern_invisible"
            android:drawablePadding="@dimen/margin_10dp"
            android:drawableRight="@drawable/menu_pattern_select"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/lock_invisible_pattern"/>
    </LinearLayout>

</LinearLayout>